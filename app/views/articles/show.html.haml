%h1= @article.title
%p= @article.content

.btn-group
  = link_to "Back", root_path, class: "btn btn-default"
  - if user_signed_in?
    = link_to "Edit", edit_article_path(@article), class: "btn btn-default", class: "btn btn-default"
    = link_to "Delete", article_path(@article), method: :delete, data: {confirm: "Voulez-vous vraiment supprimez cet article ?"}, class: "btn btn-default"
